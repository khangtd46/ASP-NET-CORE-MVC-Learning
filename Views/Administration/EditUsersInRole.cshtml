@model List<UserRoleViewModel>
@{
	ViewBag.Title = "Edit User Role";
	string RoleID = ViewBag.RoleID;
}

<form method="post">
	<div>
		<h2>Add or remove users from this role</h2>
	</div>

	<div class="card-body">
		@for (int i = 0; i < Model.Count; i++)
		{

			<div>
				<input asp-for="@Model[i].UserID" hidden />
				<input asp-for="@Model[i].UserName" hidden />
				<input asp-for="@Model[i].IsSelected" class="form-check-input" />
				<label asp-for="@Model[i].IsSelected">@Model[i].UserName</label>
			</div>
		}
	</div>

	<div>
		<input type="submit" value="Update"/>
		<a asp-action="EditRole" asp-controller="Administration" asp-route-id="@RoleID">Cancel</a>
	</div>
	
		
</form>